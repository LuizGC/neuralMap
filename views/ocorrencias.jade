extends layout

block content
	div.container(ng-controller="ocorrencias")
		h1 Visualizar Ocorrências
		p Visualizar Ocorrências

		table.table.table-striped.table-bordered.table-condensed
			thead
				tr
					th
					th Hora
					th Latitude
					th Longitude
					th Dia
					th Mes
			tbody
				each ocorrencia , i in ocorrencias
					tr
						td= i + 1
						td= ocorrencia.hora
						td= ocorrencia.latitude
						td= ocorrencia.longitude
						td= ocorrencia.nome_dia
						td= ocorrencia.mes



block footer
	script(src='/javascripts/ocorrencias.js')